{
  "default_tool": "spotdl",
  "output_dir": "./downloads",
  "format": "opus",
  "concurrency": 1,
  "ffmpeg_path": "ffmpeg",
  "spotdl_extra_args": [],
  "ytdlp_extra_args": [
    "-x",
    "--audio-format",
    "best"
  ],
  "postprocess": {
    "convert_with_ffmpeg": true,
    "normalize_audio": false
  },
  "retry_delay": 10,
  "filename_template": "{artist} - {title}.{ext}",
  "notify": {
    "enabled": false,
    "method": "ntfy",
    "ntfy_topic": ""
  },
  "retry": {
    "attempts": 5,
    "backoff_seconds": 10
  }
}